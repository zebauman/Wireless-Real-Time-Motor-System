<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

                <ImageView
                    android:id="@+id/iconDevice"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_bluetooth"
                    app:tint="@color/aggie_maroon"
                    android:padding="8dp"
                    android:background="@drawable/shape_circle_faded_maroon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <TextView
                    android:id="@+id/deviceName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/aggie_maroon"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Nucleo WB55"
                    app:layout_constraintStart_toEndOf="@id/iconDevice"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/signalContainer"
                    app:layout_constraintBottom_toTopOf="@+id/deviceAddress"
                    app:layout_constraintVertical_chainStyle="packed"/>

                <TextView
                    android:id="@+id/deviceAddress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="11sp"
                    android:fontFamily="monospace"
                    android:textColor="#757575"
                    tools:text="D0:39:72:AA:BC:1F"
                    app:layout_constraintStart_toEndOf="@id/iconDevice"
                    app:layout_constraintTop_toBottomOf="@+id/deviceName"
                    app:layout_constraintEnd_toStartOf="@+id/signalContainer"
                    app:layout_constraintBottom_toTopOf="@+id/deviceTime"/>

                <TextView
                    android:id="@+id/deviceTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="11sp"
                    android:textColor="#BDBDBD"
                    android:textStyle="italic"
                    tools:text="seen 2s ago"
                    app:layout_constraintStart_toEndOf="@id/iconDevice"
                    app:layout_constraintTop_toBottomOf="@+id/deviceAddress"
                    app:layout_constraintEnd_toStartOf="@+id/signalContainer"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:id="@+id/signalContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toStartOf="@id/btnConnect"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                        <TextView
                            android:id="@+id/deviceRsi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#757575"
                            tools:text="-62"/>

                        <ImageView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@drawable/ic_signal_cellular_alt"
                            app:tint="#757575"
                            android:layout_marginStart="2dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/btnConnect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connect"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/aggie_maroon"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:background="@drawable/shape_pill_outline_maroon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>